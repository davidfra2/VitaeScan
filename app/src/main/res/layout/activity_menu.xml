<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/miImagen"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/logo_v"
            android:layout_marginLeft="340dp"
            android:layout_marginTop="20dp"/>
    </FrameLayout>


    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido \n[Nombre del Usuario]"
        android:textSize="40sp"
        android:textColor="@color/green"
        android:fontFamily="@font/codec_pro_bold"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué deseas hacer?"
        android:fontFamily="@font/codec_pro_bold"
        android:textSize="32sp"
        android:textColor="@color/green"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_digitalizar"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/green"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_regular"
        android:elevation="4dp"
        android:text="Digitalizar hoja de vida"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="40px"/>

    <Button
        android:id="@+id/btn_hacercv"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_regular"
        android:elevation="4dp"
        android:text="Crea una hoja de vida"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_digitalizar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="40px"/>

    <Button
        android:id="@+id/btn_vercv"
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="16dp"
        android:backgroundTint="@color/green"
        android:fontFamily="@font/poppins_regular"
        android:elevation="4dp"
        android:text="Ver hojas de vida"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_hacercv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="40px"/>

</androidx.constraintlayout.widget.ConstraintLayout>